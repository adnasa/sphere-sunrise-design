<!DOCTYPE html>
<html lang="en">
  <head>
    {{> common/htmlhead}}
  </head>

  <body>
  {{> common/header}}

  <div class="home-page">
    <div class="slick-homepage">
      {{#each content.carouselItems.list}}
        <div class="home-carousel-item">
          <img src="{{image}}" alt="Carousel banner image" />
          <div class="home-carousel-caption">
            <h4 class="home-carousel-title">{{title}}</h4>
            <hr class="home-carousel-hr">
            <p>{{description}}</p>
            <a href="{{url}}" class="btn home-carousel-btn">{{buttonText}}</a>
          </div>
        </div>
      {{/each}}
    </div>

    <div class="container">
      {{#with content.suggestions}}
      <h4 class="home-suggestions-title">{{text}}</h4>
      <hr class="home-suggestions-hr">
      <p class="home-suggestions-description">{{description}}</p>
      <div class="row">
        {{#each list}}
          <div class="col-xs-12 col-sm-6 col-md-3">
            {{> catalog/product-thumbnail context=..}}
          </div>
        {{/each}}
      </div>
      {{/with}}

      <div class="home-viewall">
        <a href="" class="home-viewall-btn">View All New Products</a>
        <hr class="home-viewall-hr">
      </div>
    </div>
  </div>

  {{> catalog/wishlist}}
  {{> common/footer}}
  {{> common/htmlscripts}}
  </body>
</html>

<div class="col-sm-3 filter-options sidebar-offcanvas" id="sidebar">
  <button class="offcanvas-btn offcanvas-btn-close icon-close" data-toggle="offcanvas" type="button"><span class="sr-only">Filter schlie√üen</span></button>
  <div class="row">
    <div class="col-sm-12">
      <div class="row">
        <div class="col-sm-12 ">
          <p class="filter-products"><b>{{page.filters.title}}</b></p>
        </div>
      </div>
      <hr class="hr">
      <div class="row product-type">
        <div class="col-xs-8 text-left">
          {{page.filters.categories.title}}
        </div>
        <div class="col-xs-4">
          <a class="text-right clear-btn" href="#">{{page.filters.clear}}</a>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div aria-multiselectable="true" class="panel-group" id="accordion" role="tablist">
            {{#each page.filters.categories.list}}
              <div class="panel panel-default">
                <div class="panel-heading" id="heading-one" role="tab">
                  <h4 class="panel-title">
                    <a aria-controls="collapse-one" aria-expanded="true" class="" data-parent="#accordion" data-toggle="collapse" href="#{{id}}">
                      {{name}}
                    </a>
                  </h4>
                </div>
                <div aria-labelledby="heading-one" class="panel-collapse collapse {{#if isSelected}}in{{/if}}" id="{{id}}" role="tabpanel">
                  <div class="panel-body">
                    {{#each children}}
                      <div class="checkbox">
                        <label>
                          <input type="checkbox" value="{{value}}" {{#if isSelected}}checked{{/if}}>
                          {{name}}
                        </label>
                      </div>
                    {{/each}}
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
      <hr class="hr">
      <div class="row size-box">
        <div class="col-xs-8 text-left">
          {{page.filters.size.title}}
        </div>
        <div class="col-xs-4">
          <a class="text-right clear-btn" href="#">{{page.filters.clear}}</a>
        </div>
      </div>
      <div class="pop-filter-size">
        {{#each page.filters.size.list}}
          <input type="checkbox" value="{{value}}" {{#if isSelected}}checked{{/if}}><label>{{name}}</label><br>
        {{/each}}
      </div>
      <hr class="hr">
      <div class="row color-box">
        <div class="col-xs-8 text-left">
          {{page.filters.color.title}}
        </div>
        <div class="col-xs-4">
          <a class="text-right clear-btn" href="#">{{page.filters.clear}}</a>
        </div>
      </div>
      <div class="pop-filter-color">
        {{#each page.filters.color.list}}
          <input type="checkbox" value="{{value}}" {{#if isSelected}}checked{{/if}}><label>{{name}}</label><br>
        {{/each}}
      </div>
      <hr class="hr">
      <div class="row price-box">
        <div class="col-xs-8">
          Price
        </div>
        <div class="col-xs-4">
          <a class="text-right clear-btn" href="#">{{page.filters.clear}}</a>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 text-center slider-col">
          <p><input id="amount" readonly style="border:0; color:black; background: transparent; text-align: center;" type="text"></p>
          <div id="slider-range"></div>
        </div>
      </div>
      <hr class="hr">
      <div class="row brands-box">
        <div class="col-xs-8 text-left">
          {{page.filters.brands.title}}
        </div>
        <div class="col-xs-4">
          <a class="text-right clear-btn" href="#">{{page.filters.clear}}</a>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="brands-list">
            {{#each page.filters.brands.list}}
              <div class="checkbox">
                <input id="brands-checkbox" type="checkbox" {{#if isSelected}}checked{{/if}}><label>{{name}}</label>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

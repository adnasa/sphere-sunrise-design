<div class="login-box-wrapper">
  <div class="clearfix">
    <div class="pull-left">
      <div class="login-box-title">Returning Customer Sign In</div>
    </div>
    <div class="pull-right">
      <div class="login-box-required">Required Fields*</div>
    </div>
  </div>
  <hr class="login-box-hr">
  <div class="login-box-description">If you have an account, please sign in for faster checkout</div>
  <div class="login-box-input-wrapper">
    <div class="login-box-input">
      <span>Email*</span><br>
      <input type="email" name="" value="">
    </div>
    <div class="login-box-input">
      <span>Password*</span><br>
      <input type="password" name="" value="">
    </div>
    <div class="clearfix">
      <div class="pull-left">
        <div class="login-box-remember-me">
          <input type="checkbox" name="" value="">
          <label for="">Remember Me</label>
        </div>
      </div>
      <div class="pull-right">
        <div class="login-box-forgot-password">
          <a href="#">Forgot password</a>
        </div>
      </div>
    </div>
    <button class="login-box-sign-in-btn">Sign In</button>
  </div>
</div>

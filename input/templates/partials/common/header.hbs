  {{#with header}}
  <div class="navbar navbar-fixed-top">

    <div class="header">
      <header class="container">
        <div class="row">
          <div class="col-xs-12">
            <ul class="nav-list">
              <!-- Toggle the menu on mobile -->
              <li class="list-item-nav-toggle">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
              </li>
              <!-- Toggles the search field on mobile / not visible on desktop -->
              <li class="list-item-search"><button type="button" class="search-toggle icon-magnifying-glass"><span class="sr-only">{{search.textToggle}}</span></button></li>

              <li class="list-item-store"><a href="{{stores.url}}" class="store-select icon-marker"><span class="hidden-xs">{{stores.text}}</span></a></li>

              <li class="list-item-help"><a href="{{help.url}}" class="link-help">{{help.text}}</a></li>

              <li class="list-item-call"><a href="{{callUs.url}}" class="link-hotline">{{callUs.text}}</a></li>
              <!-- Add or remove class "not-emtpy" to change styling of shopping bag -->
              <li class="list-item-bag"><a href="{{miniCart.url}}" class="not-empty link-your-bag icon-hand-bag"><span class="hidden-xs hidden-sm">{{miniCart.text}}</span> <span class="cart-item-number">{{miniCart.numItems}}</span></a></li>

              <li class="list-item-user"><a href="{{user.signIn.url}}" class="link-user icon-user"><span class="hidden-xs hidden-sm">{{user.signIn.text}}</span></a></li>

              <li class="list-item-location">
                <button><img src="assets/img/globe-2.png" alt="Location"></button>
              </li>

            </ul>
          </div>
        </div>
      </header>
    </div>

    <div id="navigation" class="container">
      <div class="row logo-search">
        <div class="col-sm-8">
          <a href="#" class="brand-logo">
            <img class="img-responsive" src="assets/img/logo.svg" alt="SUNRISE Logo">
          </a>
        </div>
        <div class="col-sm-4">
         <form class="search-box text-right" action="{{search.url}}">
            <input class="search-field" type="search" placeholder="Search" />
            <button type="submit" class="search-button"><span class="icon-font icon-magnifying-glass"></span><span class="sr-only">{{search.text}}</span></button>
         </form>
        </div>
      </div>

      <div class="row">
        <div class="dropdown-megamenu navbar navbar-default">
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li><a href="{{navMenu.new.url}}">{{navMenu.new.text}}</a></li>
              {{#each navMenu.categories}}
              <li class="dropdown menu-large">
                <a href="{{url}}" class="dropdown-toggle" data-toggle="dropdown">{{text}}<img class="mobile-plus-content visible-xs" src="assets/img/plus79.png" alt="plus content"></a>
                <ul class="dropdown-menu megamenu row dropdown-submenu">
                  <li class="col-sm-8">
                    <div class="nav-accordion">
                      {{#each children}}
                        <h3>{{text}}</h3>
                        <ul>
                          {{#each children}}
                            <li><a href="{{url}}">{{text}}</a></li>
                          {{/each}}
                        </ul>
                      {{/each}}
                    </div>
                  </li>
                  <li class="col-sm-4 hidden-xs">
                    <img src="assets/img/menu-teaser.jpg" alt="Summer 2015 – What inspires you?" class="img-responsive megamenu-img">
                  </li>
                </ul>
              </li>
              {{/each}}
              <li class="dropdown menu-large">
                <a href="{{navMenu.brands.url}}" class="dropdown-toggle" data-toggle="dropdown">{{navMenu.brands.text}}<img class="mobile-plus-content visible-xs" src="assets/img/plus79.png" alt="plus content"></a>
                <ul class="dropdown-menu megamenu row dropdown-submenu">
                  <li class="col-sm-8">
                    <div class="nav-accordion">
                      {{#each navMenu.brands.children}}
                        <h3>{{text}}</h3>
                        <ul>
                          {{#each children}}
                            <li><a href="{{url}}">{{text}}</a></li>
                          {{/each}}
                        </ul>
                      {{/each}}
                    </div>
                  </li>
                  <li class="col-sm-4 hidden-xs">
                    <img src="assets/img/menu-teaser.jpg" alt="Summer 2015 – What inspires you?" class="img-responsive megamenu-img">
                  </li>
                </ul>
              </li>
              <li><a href="{{navMenu.sale.url}}" class="sale icon-ribbon">{{navMenu.sale.text}}</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/with}}

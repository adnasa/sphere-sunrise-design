<div class="checkout-summary">
    <div class="text-uppercase">
        <span class="checkout-summary-title">{{content.paymentDetails.text}}</span>
        <a id="confirmation-edit-details-btn" href="#">
                      <span class="pull-right">
                        <img src="{{meta.assetsPath}}img/edit-1.png" class="checkout-summary-edit-icon" alt="">{{content.editIconText}}</span>
        </a>
    </div>
    <div class="checkout-summary-text">
        <span>{{content.paymentDetails.type}}</span>
        <br>
        <span>{{content.paymentDetails.name}}</span>
        <br>
        <span>{{content.paymentDetails.card}}</span>
        <br>
        <span>{{content.paymentDetails.number}}</span>
        <br>
        <span>{{content.paymentDetails.date}}</span>
    </div>
</div>

<div class="{{mainClass}}">
    <div class="row">
        <div class="row text-uppercase hidden-xs cart-items-title">
            <div class="col-sm-6">
                <span>{{content.cartItems.description}}</span>
            </div>
            <div class="col-sm-2{{#unless editable}} text-center{{/unless}}">
                <span>{{i18n "common.quantity"}}</span>
            </div>
            <div class="col-sm-2 text-right">
                <span>{{content.cartItems.price}}</span>
            </div>
            <div class="col-sm-2 text-right">
                <span>{{content.cartItems.totalPrice}}</span>
            </div>
        </div>
    </div>

  {{#each content.cartItems.list}}
      <div class="row single-cart-item">
          <div class="col-sm-1 col-xs-4 product-img-col">
              <img class="img-responsive cart-item-img" src="{{../meta.assetsPath}}img/blue-jacket.jpg" alt="cart item image">
          </div>
          <div class="col-sm-3 col-xs-8 product-info-text">
              <p class="cart-item-name">{{nameHeadline}}
                  <br>{{nameSubline}}</p>
              <p class="grey-p">{{sku}}</p>
              <p class="cart-color-size">
                  <!--:color-->
                {{i18n "common.color"}}:
                  <span class="black-p" data-model="cartItem.color">{{color}}</span>
                  <!--:colorend-->
                  <br>
                  <!--:size-->
                {{i18n "common.size"}}:
                  <span class="black-p" data-model="cartItem.size">{{size}}</span>
                  <!--:sizeend-->
              </p>
              <p class="cart-item-availability grey-p hidden-xs">
                  <span class="glyphicon glyphicon-ok-sign"></span>{{available}}</p>
              <p class="cart-item-availability grey-p visible-xs">
                  <span class="glyphicon glyphicon-ok-sign"></span>{{available}}</p>
          </div>




      {{#if ../editable}}
          <div class="col-sm-2 col-xs-12 cart-edit-delete">
              <div class="edit-section-options">
                  <div class="edit-delete-section">
                      <button type="submit" class="edit-action" id="{{editId}}" href="#">
                        <span>
                          <img class="cart-action-icon" src="{{../../meta.assetsPath}}img/edit-1.png" alt="delete">{{edit}}
                        </span>
                      </button>
                  </div>
                  <div class="edit-delete-section">
                      <button type="submit" id="{{deleteId}}" href="#">
                        <span>
                          <img class="cart-action-icon" src="{{../../meta.assetsPath}}img/delete-1.png" alt="delete">{{delete}}
                        </span>
                      </button>
                  </div>
              </div>
              <div class="edit-section-form">
                  <select data-model="cartItem.color" class="selector checkout-dropdown">
                    {{#each availableColors}}
                        <option value="{{value}}">{{label}}</option>
                    {{/each}}
                  </select>
                  <select data-model="cartItem.size" class="selector checkout-dropdown">
                    {{#each availableSizes}}
                        <option value="{{value}}">{{label}}</option>
                    {{/each}}
                  </select>
                  <div class="actions text-right">
                      <button type="button" class="default-btn cancel-action">
                          <span class="hidden-xs hidden-md hidden-lg">{{editWidgedCancelXs}}</span>
                          <span class="hidden-sm">{{editWidgedCancel}}</span>
                      </button>
                      <button type="button" class="action-btn update-action">{{editWidgedUpdate}}</button>
                  </div>
              </div>
          </div>
          <div class="col-sm-2 col-xs-12 clearfix">
              <div class="sm-pull-right visible-xs">
                  <button type="submit" id="{{cartQuantitySubmitBtnId}}" class="quantity-submit-btn">{{cartQuantitySubmitBtn}}</button>
              </div>
              <div class="sm-pull-right quantity-spinner">
                  <span id="{{cartQuantityDecrementId}}" class="input-number-decrement">â€“</span>
                  <input id="{{cartQuantityValueId}}" class="input-number" type="text" value="1" min="1" max="10">
                  <span id="{{cartQuantityIncrementId}}" class="input-number-increment">+</span>
              </div>
              <div class="sm-pull-right hidden-xs">
                  <button type="submit" id="{{cartQuantitySubmitBtnId}}" class="quantity-submit-btn">{{cartQuantitySubmitBtn}}</button>
              </div>
          </div>
      {{else}}
          <div class="col-sm-2 col-sm-offset-2 col-xs-12 text-center quantity-counter">
              <span class="visible-xs">Quantity:</span>
              <span class="quantity-number">{{quantity}}</span>
          </div>
      {{/if}}






          <div class="col-sm-2 {{#if editable}}col-xs-12 sm-pull-right{{else}}col-xs-7{{/if}}">
              <div class="text-right cart-item-price">
                  <span class="visible-xs xs-price-title">{{i18n "common.price"}}</span>
                {{#if priceOld}}
                    <span class="discounted-price">{{priceOld}}</span>
                {{/if}}
                  <span>{{price}}</span>
              </div>
          </div>
          <div class="col-sm-2 {{#if editable}}col-xs-12 sm-pull-right{{else}}col-xs-5{{/if}}">
              <div class="text-right cart-item-price">
                  <span class="visible-xs xs-price-title">{{i18n "checkout.total"}}</span>
                  <span>{{totalPrice}}</span>
              </div>
          </div>
      </div>






  {{/each}}

  {{#if editable}}
      <div class="row">
          <div class="col-sm-12">
              <div class="text-right promotion-info">
                  <span class="text-uppercase promo-info-text" title="{{content.cartItems.discountTooltip}}">{{content.cartItems.promoDiscount}}
                      <img class="info-icon" src="{{meta.assetsPath}}img/information.png" alt="information icon">
                  </span>
                  <input id="promo-code" type="text">
                  <button id="cart-apply-promocode-btn" class="text-uppercase promo-apply-btn">{{content.cartItems.applyBtn}}</button>
              </div>
          </div>
      </div>
  {{/if}}



  {{#if checkoutConfirmation}}
    <div class="row">
        <div class="col-xs-12">
            <div class="follow-up">
                <input id="confirmation-savedetails-input" type="checkbox" name="save my details" value="{{content.rememberMe.value}}" class="remember-me">
                <span>{{content.rememberMe.text}}</span>
                <br>
                <input id="confirmation-newsletter-input" type="checkbox" name="add me to newsletter" value="{{content.newsletter.value}}" class="add-to-newsletter">
                    <span>{{content.newsletter.text}}
                        <span class="sunrise-newsletter"><a href="{{content.newsletter.url}}">{{content.newsletter.description}}</a></span>
                    </span>
            </div>
        </div>
    </div>
  {{/if}}



    <div class="row">
        <div class="col-sm-12">
            <div class="total-price-calc">

              {{#unless editable}}
                  <div class="row text-right payment-code-applied">
                      <span class="payment-code-title">Promotion code applied:</span>
                      <span class="payment-code">Sunny Sale</span>
                  </div>
              {{/unless}}


                <div class="row">
                    <div class="col-sm-10 col-xs-7">
                        <div class="text-right subtotal">
                            <span class="subtotal-title">{{i18n "checkout.subtotal"}}</span>
                        </div>
                        <div class="text-right">
                            <span class="order-discount">{{i18n "checkout.orderDiscount"}}</span>
                        </div>
                        <div class="text-right delivery-info">
                            <span class="delivery-info-title">{{content.cart.deliveryTitle}}</span>
                        </div>
                        <hr class="total-divider">
                        <div class="text-right">
                            <span>{{i18n "common.salesTax"}}</span>
                        </div>
                        <div class="text-right">
                            <span class="order-total">{{i18n "checkout.subtotal"}}</span>
                        </div>
                    </div>
                    <div class="col-sm-2 col-xs-5 text-right">
                        <div>
                            <span>{{content.cart.subtotal}}</span>
                        </div>
                        <div>
                            <span class="order-discount">{{content.cart.discount}}</span>
                        </div>
                        <div>
                            <span>{{content.cart.deliverySum}}</span>
                        </div>
                        <hr>
                        <div>
                            <span>{{content.cart.tax}}</span>
                        </div>
                        <div>
                            <span class="order-total">{{content.cart.total}}</span>
                        </div>
                    </div>

                  {{#if checkoutConfirmation}}
                    <div class="complete-order">
                        <a id="confirmation-completeorder-btn" href="{{content.completeOrderBtn.url}}" class="btn complete-order-btn">{{content.completeOrderBtn.text}}</a>
                        <br>
                        <div class="agree-to">
                            <span class="">{{content.termsConditions.text}} </span>
                            <a id="confirmation-termsandconditions-link" href="{{content.termsConditions.url}}">
                                <span class="terms-link">{{content.termsConditions.linkText}}</span>
                            </a>
                        </div>
                    </div>
                  {{/if}}



                </div>
            </div>
        </div>
    </div>
</div>

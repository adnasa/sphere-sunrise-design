<div class="{{mainClass}}">
    <div class="row">
        <div class="row text-uppercase hidden-xs cart-items-title">
            <div class="col-sm-6">
                <span>{{i18n "common.description"}}</span>
            </div>
            <div class="col-sm-2{{#unless editable}} text-center{{/unless}}">
                <span>{{i18n "common.quantity"}}</span>
            </div>
            <div class="col-sm-2 text-right">
                <span>{{i18n "common.price"}}</span>
            </div>
            <div class="col-sm-2 text-right">
                <span>{{i18n "checkout:total"}}</span>
            </div>
        </div>
    </div>

  {{#each cart.lineItems.list}}
      <div class="row single-cart-item">
          <div class="col-sm-1 col-xs-4 product-img-col">
              <img class="img-responsive cart-item-img" src="{{image}}" alt="cart item image">
          </div>
          <div class="col-sm-3 col-xs-8 product-info-text">
              <p class="cart-item-name">{{name}}
                  <br>{{description}}</p>
              <p class="grey-p">{{sku}}</p>
            {{#if attributes.color}}
              {{#if attributes.size}}
                  <p class="cart-color-size">
                      <!--:color-->
                    {{i18n "common.color"}}:
                      <span class="black-p" data-model="cartItem.color">{{attributes.color}}</span>
                      <!--:colorend-->
                      <br>
                      <!--:size-->
                    {{i18n "common.size"}}:
                      <span class="black-p" data-model="cartItem.size">{{attributes.size}}</span>
                      <!--:sizeend-->
                  </p>
              {{/if}}
            {{/if}}
            {{#unless ../ordered}}
                <p class="cart-item-availability grey-p">
                    <span class="glyphicon glyphicon-ok-sign"></span>{{i18n "content.product.available"}}
                </p>
            {{/unless}}
          </div>




      {{#if ../editable}}
          <div class="col-sm-2 col-xs-12 cart-edit-delete">
              <div class="edit-section-options">
                  <div class="edit-delete-section">
                      <button type="submit" class="edit-action" id="cart-edit-button-{{@index}}">
                        <span>
                          <img class="cart-action-icon" src="{{../../meta.assetsPath}}img/edit-1.png" alt="edit">{{i18n "form.edit"}}
                        </span>
                      </button>
                  </div>
                  <div class="edit-delete-section">
                      <button type="submit" id="cart-delete-button-{{@index}}">
                        <span>
                          <img class="cart-action-icon" src="{{../../meta.assetsPath}}img/delete-1.png" alt="delete">{{i18n "form.delete"}}
                        </span>
                      </button>
                  </div>
              </div>
            {{#if availableColors}}
              {{#if availableSizes}}
                  <div class="edit-section-form">
                      <select data-model="cartItem.color" class="selector checkout-dropdown">
                        {{#each availableColors}}
                            <option value="{{value}}">{{label}}</option>
                        {{/each}}
                      </select>
                      <select data-model="cartItem.size" class="selector checkout-dropdown">
                        {{#each availableSizes}}
                            <option value="{{value}}">{{label}}</option>
                        {{/each}}
                      </select>
                      <div class="actions text-right">
                          <button type="button" class="default-btn cancel-action">
                              <span class="hidden-xs hidden-md hidden-lg">{{i18n "form.cancel"}}</span>
                              <span class="hidden-sm">X</span>
                          </button>
                          <button type="button" class="action-btn update-action">{{i18n "form.submit"}}</button>
                      </div>
                  </div>
              {{/if}}
            {{/if}}
          </div>
          <div class="col-sm-2 col-xs-12 clearfix">
              <div class="sm-pull-right visible-xs">
                  <button type="submit" id="cart-quantity-submit-btn-{{@index}}" class="quantity-submit-btn">{{i18n "form.submit"}}</button>
              </div>
              <div class="sm-pull-right quantity-spinner">
                  <span id="cart-quantity-decrement-{{@index}}" class="input-number-decrement">â€“</span>
                  <input id="cart-quantity-value-{{@index}}" class="input-number" type="text" value="1" min="1" max="10">
                  <span id="cart-quantity-increment-{{@index}}" class="input-number-increment">+</span>
              </div>
              <div class="sm-pull-right hidden-xs">
                  <button type="submit" id="cart-quantity-submit-btn-{{@index}}" class="quantity-submit-btn">{{i18n "form.submit"}}</button>
              </div>
          </div>
      {{else}}
          <div class="col-sm-2 col-sm-offset-2 col-xs-12 text-center quantity-counter">
              <span class="visible-xs">Quantity:</span>
              <span class="quantity-number">{{quantity}}</span>
          </div>
      {{/if}}






          <div class="col-sm-2 {{#if editable}}col-xs-12 sm-pull-right{{else}}col-xs-7{{/if}}">
              <div class="text-right cart-item-price">
                  <span class="visible-xs xs-price-title">{{i18n "common.price"}}</span>
                {{#if priceOld}}
                    <span class="discounted-price">{{priceOld}}</span>
                {{/if}}
                  <span>{{price}}</span>
              </div>
          </div>
          <div class="col-sm-2 {{#if editable}}col-xs-12 sm-pull-right{{else}}col-xs-5{{/if}}">
              <div class="text-right cart-item-price">
                  <span class="visible-xs xs-price-title">{{i18n "checkout:total"}}</span>
                  <span>{{total}}</span>
              </div>
          </div>
      </div>






  {{/each}}

  {{#if editable}}
    {{#if meta.features.cartDiscounts.active}}
        <div class="row">
            <div class="col-sm-12">
                <div class="text-right promotion-info">
                    <span class="text-uppercase promo-info-text" title="{{i18n "checkout:discountTooltip"}}">{{i18n "checkout:discountPromoInfo"}}
                        <img class="info-icon" src="{{meta.assetsPath}}img/information.png" alt="information icon">
                    </span>
                    <input id="promo-code" type="text">
                    <button id="cart-apply-promocode-btn" class="text-uppercase promo-apply-btn">{{i18n "checkout:discountApply"}}</button>
                </div>
            </div>
        </div>
    {{/if}}
  {{/if}}



  {{#if checkoutConfirmation}}
    <div class="row">
        <div class="col-xs-12">
            <div class="follow-up">
                {{#if meta.features.myAccount.active}}
                    <label for="confirmation-savedetails-input">
                        <input id="confirmation-savedetails-input" type="checkbox" name="save-account-details" value="remember" class="remember-me"{{#if content.checkoutForm.remember.selected}}checked {{/if}}>
                        <span>{{i18n "checkout:rememberMe"}}</span>
                    </label>
                {{/if}}
                <label for="confirmation-newsletter-input">
                    <input id="confirmation-newsletter-input" type="checkbox" name="add-to-newsletter" value="newsletter" class="add-to-newsletter"{{#if content.checkoutForm.newsletter.selected}}checked {{/if}}>
                    <span>{{i18n "checkout:addToNewsletter"}}
                        <span class="sunrise-newsletter"><a href="{{content.checkoutForm.newsletter.url}}">{{content.checkoutForm.newsletter.name}}</a></span>
                    </span>
                </label>
                <label for="agree-to-input">
                    <input id="agree-to-input" type="checkbox" name="agree-terms" value="terms" class="agree-terms"{{#if content.checkoutForm.termsConditions.selected}}checked {{/if}}>
                    <span>
                        <span class="sunrise-newsletter">{{i18n "checkout:agreeToTermsHtml" url=content.checkoutForm.termsConditions.url}}</span>
                    </span>
                </label>
            </div>
        </div>
    </div>
  {{/if}}



    <div class="row">
        <div class="col-sm-12">
            <div class="total-price-calc">

              {{#unless editable}}
                {{#if meta.features.cartDiscounts.active}}
                  <div class="row text-right payment-code-applied">
                      <span class="payment-code-title">Promotion code applied:</span>
                      <span class="payment-code">Sunny Sale</span>
                  </div>
                {{/if}}
              {{/unless}}


                <div class="row">
                    <div class="col-sm-10 col-xs-7">
                        <div class="text-right subtotal">
                            <span class="subtotal-title">{{i18n "checkout:subtotal"}}</span>
                        </div>
                        {{#if meta.features.cartDiscounts.active}}
                        <div class="text-right">
                            <span class="order-discount">{{i18n "checkout:orderDiscount"}}</span>
                        </div>
                        {{/if}}
                        <div class="text-right delivery-info">
                            <span class="delivery-info-title">{{cart.shippingMethod.name}}</span>
                        </div>
                        <hr class="total-divider">
                        <div class="text-right">
                            <span>{{i18n "common.salesTax"}}</span>
                        </div>
                        <div class="text-right">
                            <span class="order-total">{{i18n "checkout:subtotal"}}</span>
                        </div>
                    </div>
                    <div class="col-sm-2 col-xs-5 text-right">
                        <div>
                            <span>{{cart.subtotal}}</span>
                        </div>
                        {{#if meta.features.cartDiscounts.active}}
                        <div>
                            <span class="order-discount">{{cart.discount}}</span>
                        </div>
                        {{/if}}
                        <div>
                            <span>{{cart.shippingMethod.total}}</span>
                        </div>
                        <hr>
                        <div>
                            <span>{{cart.salesTax}}</span>
                        </div>
                        <div>
                            <span class="order-total">{{cart.total}}</span>
                        </div>
                    </div>

                  {{#if checkoutConfirmation}}
                      <div class="complete-order">
                          <button id="confirmation-completeorder-btn" class="btn complete-order-btn">{{i18n "checkout:completeMyOrder"}}</button>
                          <br>
                      </div>
                  {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

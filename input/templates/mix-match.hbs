<!DOCTYPE html>
<html lang="en">

<head>
  {{> common/htmlhead}}
</head>

<body>
  <div class="darkbg hidden"></div>
  {{> common/header}}

  <div class="mix-match">
    <div class="container">
      {{> catalog/breadcrumb breadcrumb=content.breadcrumb}}
      <div class="row">
        <div class="col-md-4 col-md-offset-1 col-sm-6">
          {{> catalog/product-gallery gallery=content.gallery}}
          <div class="mix-match-view-more hidden-xs">
            <div class="mix-match-view-more-title">{{i18n "catalog:viewMore.title"}}</div>
            <ul class="mix-match-view-more-list list-inline">
              {{#each content.viewMore}}
                <li><a href="{{url}}">{{name}}</a></li>
              {{/each}}
            </ul>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="mix-match-title">{{i18n "mix-match:mixMatch.title"}}</div>
          <div>{{i18n "mix-match:mixMatch.description"}}</div>
          {{> catalog/mix-match-product products=content.mixMatchProducts}}
          <div class="mix-match-bag-wishlist">
            {{> catalog/add-to-bag-btn}}
            {{> catalog/add-to-wishlist-btn text=true}}
          </div>
          <div class="panel-group panel-group-pdp" id="accordion-product-info" role="tablist" aria-multiselectable="true">
            {{> catalog/delivery-rates}}
          </div>
          <div class="mix-match-social-icons">
            {{> catalog/social-icons}}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mix-match-suggestions">
    <div class="container">
      <div class="mix-match-suggestions-title">{{i18n "catalog:suggestions.title"}}</div>
      {{> catalog/suggestions}}
      <hr class="hr">
      {{> catalog/reviews}}
    </div>
  </div>

  {{> common/footer}}
  {{> common/htmlscripts}}
</body>
</html>

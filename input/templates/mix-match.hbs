<!DOCTYPE html>
<html lang="en">

<head>
  {{> common/htmlhead}}
</head>

<body>
  <div class="darkbg hidden"></div>
  {{> common/header}}


  <div class="mix-match-page">
    <div class="container">
      {{> catalog/breadcrumb breadcrumb=content.breadcrumb}}
      <div class="row">
        <div class="col-md-4 col-md-offset-1 col-sm-6">
          {{> catalog/product-gallery gallery=content.gallery}}
        </div>
        <div class="col-sm-6">
          <div class="mix-match-page-title">{{i18n "mix-match:mixMatch.title"}}</div>
          <div>{{i18n "mix-match:mixMatch.description"}}</div>
          {{> catalog/mix-match-product products=content.mixMatchProducts}}
          <ul class="list-inline">
            <li>
              {{> catalog/add-to-bag-btn}}
            </li>
            <li>
              {{> catalog/add-to-wishlist-btn text=true}}
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>


  {{> common/footer}}
  {{> common/htmlscripts}}
</body>
</html>

<!DOCTYPE html>
<html lang="en">

<head>
  {{> common/htmlhead}}
</head>

<body>
  <div class="darkbg hidden"></div>
  {{> common/header}}
  <div class="my-account">
    <div class="container">
      <div class="my-account-title">
        <span class="my-account-title-text icon-user">MY ACCOUNT</span>
      </div>
      <div class="row">
        <div class="col-md-9">
          <div class="my-account-content">
            <div class="row">
              <div class="col-md-3">
                <div class="my-account-sidebar">
                  <div class="my-account-sidebar-items active">
                    <a href="#">Personal Details</a>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="#">Address Book</a>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="#">Payment Details</a>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="#">My Orders</a>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="#">Returns/Exchange</a>
                  </div>
                  <div class="my-account-sidebar-items clearfix">
                    <a href="#">
                      <span><img class="sidebar-wishlist-heart" src="{{meta.assetsPath}}/img/heart-1.png" alt="heart icon"></span>My Wishlist<span class="sidebar-wishlist-quantity">12</span>
                    </a>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="#">Sign Out</a>
                  </div>
                </div>
              </div>
              <div class="col-md-9">
                <div class="personal-details">
                  <div class="personal-details-text-one">
                    Welcome back, Bruce Wayne
                  </div>
                  <div class="personal-details-text-two">
                    for an even better customer service please provide your customer number:<br>
                    <span class="customer-number">1010101069691010</span>
                  </div>
                  <div class="personal-details-title">Your Personal Details</div>
                  <div class="personal-details-box">
                    <div>Mr. Bruce Wayne</div>
                    <div>Password: ******</div><br>
                    <div>Phone: +49 123 123 123 123</div>
                    <div>Email: batman@gotham.com</div><br>
                    <div>Subscribbed to weekly newsletter</div>
                    <div class="personal-details-box-edit">
                      <button><img src="assets/img/edit-1.png" alt="edit icon">EDIT</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="my-account-banners">
            <div class="banner-one-wrapper">
              <div class="my-account-banner">
                <div class="banner-title">
                  Your Sunrise
                </div>
                <hr class="banner-hr">
                <div class="banner-subtitle">
                  Make the great days happen
                </div>
                <div class="banner-btn-wrapper">
                  <a class="banner-btn" href="#">Shop All</a>
                </div>
              </div>
            </div>
            <div class="banner-two-wrapper">
              <div class="my-account-banner image-banner">
                <div class="banner-title">
                  Your Sunrise
                </div>
                <hr class="banner-hr">
                <div class="banner-subtitle">
                  Make the great days happen
                </div>
                <div class="banner-btn-wrapper">
                  <a class="banner-btn" href="#">Shop All</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- {{> catalog/wishlist}} --}}
  {{> common/footer}}
  {{> common/htmlscripts}}
</body>

</html>

<!DOCTYPE html>
<html lang="en">

<head>
  {{> htmlhead}}
</head>

<body>
  {{> header}}
  <div class="pdp-page">
    <div id="pdp-page" class="container">
      <div class="row">
          <div class="col-xs-12 breadcrumb-col">
            {{> catalog/breadcrumb}}
          </div>
        </div>
        <div class="row product-info-row-pdp">
          <div class="col-sm-4 col-sm-offset-1">
            <div class="bzoom_wrap">
              <ul id="bzoom">
                {{#each content.gallery}}
                  <li>
                    <img class="bzoom_thumb_image" src="{{thumbImage}}">
                    <img class="bzoom_big_image" src="{{bigImage}}">
                  </li>
                {{/each}}
              </ul>
            </div>
          </div>
          <div class="col-sm-6 product-description">
            {{> catalog/product-detail}}
          </div>
        </div>
     </div>
  </div>

  <div class="pdp-page-review">
    <div class="container">
      {{> catalog/suggestions}}
      <hr class="hr">
      {{> catalog/reviews}}
    </div>
  </div>

  {{> footer}}

  {{> htmlscripts}}
</body>

</html>

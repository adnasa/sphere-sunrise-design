{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "definitions": {
    "static": {
      "type": "object",
      "properties": {
        "contentHeading": {"type": "string"},
        "ratingText": {"type": "string"},
        "viewDetailsText": {"type": "string"},
        "colorsHeading": {"type": "string"},
        "sizesHeading": {"type": "string"},
        "sizeGuideText": {"type": "string"},
        "addToBagText": {"type": "string"},
        "addToWishlistText": {"type": "string"},
        "availableText": {"type": "string"},
        "productDetailsHeading": {"type": "string"},
        "deliveryAndReturnsHeading": {"type": "string"},
        "suggestionsHeading": {"type": "string"},
        "saleText": {"type": "string"},
        "newText": {"type": "string"},
        "quickViewText": {"type": "string"},
        "wishlistText": {"type": "string"},
        "moreColorsText": {"type": "string"},
        "reviewsHeading": {"type": "string"},
        "sizeDefaultItem": {"$ref": "common.json#/definitions/selectable"},
        "colorDefaultItem": {"$ref": "common.json#/definitions/selectable"},
        "rating": {
          "type": "array",
          "items": {"$ref": "common.json#/definitions/selectable"}
        },

        "bagItems": {
          "type": "array",
          "items": {"$ref": "common.json#/definitions/selectable"}
        }
      }
    }
  },

  "title": "content",
  "type": "object",
  "properties": {
    "static": {"$ref": "#/definitions/static"},
    "breadcrumbs": {
      "type": "array",
      "items": {"$ref": "common.json#/definitions/product"},
      "minItems": 1,
      "uniqueItems": true
    },
    "product": {"$ref": "common.json#/definitions/product"},
    "suggestions": {
      "type": "array",
      "items": {"$ref": "common.json#/definitions/product"},
      "minItems": 4,
      "maxItems": 4,
      "uniqueItems": true
    }
  },
  "required": ["static", "breadcrumbs", "product", "suggestions"]
}